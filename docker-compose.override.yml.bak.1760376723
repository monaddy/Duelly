services:
  api_v2:
    build:
      context: ./services/api-v2
    env_file:
      - ./api-v2.env
    depends_on:
      - postgres
      - redis
    networks:
      - private
    restart: unless-stopped
    deploy:
      resources:
        limits:
          cpus: '1'
          memory: 512M

  nginx:
    networks:
      - public
      - private
  nginx:
    networks:
      - public
      - private
    extra_hosts:
      - "api_v2:172.19.0.7"
